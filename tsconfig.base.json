{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@caribou-crew/mezzo-api-interfaces": [
        "libs/api-interfaces/src/index.ts"
      ],
      "@caribou-crew/mezzo-constants": ["libs/constants/src/index.ts"],
      "@caribou-crew/mezzo-core-client": ["libs/core-client/src/index.ts"],
      "@caribou-crew/mezzo-core-server": ["libs/core-server/src/index.ts"],
      "@caribou-crew/mezzo-interceptor-fetch": [
        "libs/interceptor-fetch/src/index.ts"
      ],
      "@caribou-crew/mezzo-interceptor-react-native": [
        "libs/interceptor-react-native/src/index.ts"
      ],
      "@caribou-crew/mezzo-interceptor-react-native-with-reactotron": [
        "libs/interceptor-react-native-with-reactotron/src/index.ts"
      ],
      "@caribou-crew/mezzo-interfaces": ["libs/interfaces/src/index.ts"],
      "@caribou-crew/mezzo-utils-generate-guid": [
        "libs/utils-generate-guid/src/index.ts"
      ],
      "@caribou-crew/mezzo-utils-logger": ["libs/utils-logger/src/index.ts"],
      "@mezzo/core-client-server-tests": [
        "libs/core-client-server-tests/src/index.ts"
      ]
    },
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "tmp"]
}
